  # set default to index.cgi
  location = /bugzilla/ {
    alias /usr/share/bugzilla/;
    index index.cgi;
  }

  # direct bugzilla cgi through fcgiwrap
  location ~ ^/bugzilla/(.*\.cgi)$ {
    alias   /usr/share/bugzilla/$1;
    index   index.cgi;
    #rewrite ^/bugzilla(/.*) $1 break;

    fastcgi_index index.cgi;
    fastcgi_pass  <%= fcgiwrap_unix_socket %>
    fastcgi_param SCRIPT_FILENAME /usr/share$fastcgi_script_name;
    include fastcgi_params;
  }

  # server non cgi files through nginx directly
  location ~ /bugzilla/.*(?!\.cgi)$ {
    root /usr/share/bugzilla;
    rewrite ^/bugzilla(/.*) $1 break;
  }


